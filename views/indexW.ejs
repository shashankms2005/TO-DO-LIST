<%- include("partials/header.ejs") %>
<div class="mainBox">
    <div class="mainDate">
    <p>Work List</p>
  </div>
    <div class="mainform">
    <form class="mf" method="post" value="Enter Your Task Here ." action="/submitWork">
      <div><input type="text" id="name" name="name" placeholder="Enter Your Task" required></div>
      <div><input type="submit" id="submit" class="s" value="+"></div>
    </div>
    </form>
    <div class="item">
      <% if(locals.array) {%>
      <% array.forEach(function(item, index) { %>
      <div class="dynamic-div">
        <input type="checkbox" class="checkBox">
        <p class="cp"> <%= item %></p>
      </div>
      <hr />
      <% }); %>
      <% } %>
    </div>
  </div>
<%- include("partials/footer.ejs") %>